                BackendLibrary.DataAccess.TaskData.AddTask(newTask);
                SaveTaskLabel();
                AddEmployeeToTask();
                SuccessTask.Show();
                uriHelper.NavigateTo(uriHelper.Uri, forceLoad: true);
                VisibilityAdd = false;
            }
        }
    }


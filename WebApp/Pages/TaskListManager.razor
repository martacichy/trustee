    /// </summary>
    public static List<BackendLibrary.Models.TaskModel> ListToDisplayTasks_m = 
        BackendLibrary.DataAccess.TaskData.GetAllByCompanyId(WebApp.Pages.Login.UserLoggedIn.Company_id);
    public int length = ListToDisplayTasks_m.Count;
    // company_id jest wpisywane na sztywno, jednak to należy poprawić, by pobierało od pracownika


    private Boolean isAdd;

    private void addNew(MouseEventArgs e)
    {
        isAdd = true;
    }

    private void closeAdd(MouseEventArgs e)
    {
        isAdd = false;
    }

}
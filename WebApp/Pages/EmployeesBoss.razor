@page "/employees-b"
<h1>Employee Data</h1>
<div>
    <div style="float:left">
        <button class="btn btn-primary" @onclick="addNew">Add Employee</button>
    </div>
    <div style="float:right; width:40%;">
        <div class="col-sm-6" style="float:left">
            <input class="form-control" type="text" placeholder="Search" />
        </div>
        <div>
            <button type="submit" class="btn btn-default btn-info">Filter</button>
        </div>
    </div>
</div>

<table class='table'>
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Gender</th>
            <th>Department</th>
            <th>City</th>
        </tr>
    </thead>
</table>

@if (isAdd)
{
    <div class="modal" tabindex="-1" style="display:block" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h3 class="modal-title">Add new Employee</h3>
                    <button type="button" class="close" @onclick="closeAdd">
                        <span aria-hidden="true">X</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form>
                        <div class="form-group">
                            <label for="Name" class="control-label">Name</label>
                            <input for="Name" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label asp-for="Gender" class="control-label">Gender</label>
                            <select asp-for="Gender" class="form-control">
                                <option value="">-- Select Gender --</option>
                                <option value="Male">Male</option>
                                <option value="Female">Female</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label asp-for="Department" class="control-label">Department</label>
                            <input asp-for="Department" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label asp-for="City" class="control-label">City</label>
                            <select asp-for="City" class="form-control">
                                <option value="">-- Select City --</option>
                            </select>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-block btn-info" data-dismiss="modal">Save</button>
                </div>
            </div>
        </div>
    </div>
}


@code {

    private Boolean isAdd;

    private void addNew(MouseEventArgs e)
    {
        isAdd = true;
    }

    private void closeAdd(MouseEventArgs e)
    {
        isAdd = false;
    }
}

@inherits LayoutComponentBase

<div class="top-row pl-4 navbar navbar-dark">
    <a class="navbar-brand" href="">Appname</a>
    <button class="navbar-toggler" @onclick="ToggleNavMenu">
        <span class="navbar-toggler-icon"></span>
    </button>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <ul class="nav flex-column">
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="tasks-m" Match="NavLinkMatch.All">
                <span class="oi oi-tasks" aria-hidden="true"></span> Tasks
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="employees-b" Match="NavLinkMatch.All">
                <span class="oi oi-employees" aria-hidden="true"></span> Employees
            </NavLink>
        </li>
    </ul>
</div>

@code { private bool collapseNavMenu = true;

    private string NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    } }

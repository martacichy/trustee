@inherits LayoutComponentBase

<div class="top-row pl-4 navbar navbar-dark">
    <a class="navbar-brand" href="/kanban">YesTask</a>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <ul class="nav flex-column">

        @* warunki odpowiedzialne za wyswietlanie podstron odpowiednich dla typu zalogowanego uzytkownika *@

        @if (WebApp.Pages.Login.UserLoggedIn.If_manager == 0)
        {
            <li class="nav-item px-3">
                <NavLink class="nav-link" href="kanban" Match="NavLinkMatch.All">
                    <span class="oi oi-tasks" aria-hidden="true"></span> Twoje zadania
                </NavLink>
            </li>
            <li class="nav-item px-3">
                <NavLink class="nav-link" href="tasks-e" Match="NavLinkMatch.All">
                    <span class="oi oi-tasks" aria-hidden="true"></span> Zadania
                </NavLink>
            </li>
        }

        @if (WebApp.Pages.Login.UserLoggedIn.If_manager == 1)
        {
            <li class="nav-item px-3">
                <NavLink class="nav-link" href="kanban" Match="NavLinkMatch.All">
                    <span class="oi oi-tasks" aria-hidden="true"></span> Moje zadania
                </NavLink>
            </li>
            <li class="nav-item px-3">
                <NavLink class="nav-link" href="tasks-m" Match="NavLinkMatch.All">
                    <span class="oi oi-tasks" aria-hidden="true"></span> Zadania
                </NavLink>
            </li>

            <li class="nav-item px-3">
                <NavLink class="nav-link" href="employees-m" Match="NavLinkMatch.All">
                    <span class="oi oi-employees" aria-hidden="true"></span> Pracownicy
                </NavLink>
            </li>
        }

        @if (WebApp.Pages.Login.UserLoggedIn.If_manager == 2)
        {
            <li class="nav-item px-3">
                <NavLink class="nav-link" href="kanban" Match="NavLinkMatch.All">
                    <span class="oi oi-tasks" aria-hidden="true"></span> Moje zadania
                </NavLink>
            </li>
            <li class="nav-item px-3">
                <NavLink class="nav-link" href="tasks-m" Match="NavLinkMatch.All">
                    <span class="oi oi-tasks" aria-hidden="true"></span> Zadania
                </NavLink>
            </li>

            <li class="nav-item px-3">
                <NavLink class="nav-link" href="employees-b" Match="NavLinkMatch.All">
                    <span class="oi oi-employees" aria-hidden="true"></span> Pracownicy
                </NavLink>
            </li>
        }
    </ul>
</div>

@code { private bool collapseNavMenu = true;

    private string NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    } }
